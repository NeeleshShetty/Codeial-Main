<div id="home-container">
  <section id="feed-posts">
    <h3>Posts</h3>

    <!-- Adding posts -->

    <% if(locals.user) {%>
    <form action="/posts/create" id="new-posts" method="post">
      <textarea
        name="content"
        cols="30"
        rows="3"
        placeholder="Comments"
      ></textarea>
      <input type="submit" value="Post" />
    </form>
    <%}%>

    <!-- Displaying Posts -->
    <div id="posts-id-container">
      <ul>
        <% for(post of posts){ %> 
            <%- include('_post') -%> 
        <% } %>
      </ul>
    </div>
  </section>

  <section id="user-friends">
    <h3>Friends</h3>

    <% for(u of all_users){ %>
    <p>
      <a href="/users/profile/<%= u.id %>"> <%= u.name %> </a>
    </p>
    <% } %>
  </section>
</div>
<script src="/JS/home_posts.js"></script>
